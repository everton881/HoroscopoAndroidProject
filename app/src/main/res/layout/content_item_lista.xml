<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
     app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.everton.horoscopo.itemListaActivity"
    tools:showIn="@layout/activity_item_lista">

    <ImageView
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:id="@+id/item_hosc_icone"
        android:layout_alignTop="@+id/item_hosc_signo"
        android:layout_alignParentLeft="true"
        android:paddingRight="8dp"
        android:layout_alignParentStart="true" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Signo"
        android:id="@+id/item_hosc_signo"
        android:layout_marginTop="15dp"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/item_hosc_icone"
        android:layout_toEndOf="@+id/item_hosc_icone"
        android:textColor="@color/yellow"

        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="11/0/2016"
        android:id="@+id/item_hosc_data"
        android:layout_below="@+id/item_hosc_signo"
        android:layout_toRightOf="@+id/item_hosc_icone"
        android:layout_toEndOf="@+id/item_hosc_icone"
        android:textColor="@color/yellow"

        />


</RelativeLayout>
